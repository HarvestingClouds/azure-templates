{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "defaultValue": "WEB1",
      "metadata": {
        "description": "Name for the VM the extension will be applied to."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "publisher": "Microsoft.OSTCExtensions",
    "type": "CustomScriptForLinux",
    "typeHandlerVersion": "1.29",
    "fileUri": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/apache2-on-ubuntu-vm/install_apache.sh",
    "commandToExecute": "sh install_apache.sh"
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/1')]",
      "location": "[variables('location')]",
      "properties": {
        "publisher": "[variables('publisher')]",
        "type": "[variables('type')]",
        "typeHandlerVersion": "[variables('typeHandlerVersion')]",
        "settings": {
          "fileUris": [ "[variables('fileUri')]" ],
          "commandToExecute": "[variables('commandToExecute')]"
        }        
      }
    }
  ]
}
