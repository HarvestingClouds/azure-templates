{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "stdStorageName": {
      "maxLength": 10,
      "type": "string",
      "metadata": {
        "description": "Name prefix for simple storage account."
      }
    },
    "stdStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ]
    },
    "prmStorageName": {
      "type": "string",
      "maxLength": 10
      "metadata": {
        "description": "Name prefix for simple storage account."
      }
    },
    "prmStorageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Premium_GRS",
        "Premium_ZRS"
      ]
    }
  },
  "variables": {
    "stdStgAccountName": "[concat(parameters('stdStorageName'),uniqueString(resourceGroup().Id))]",
    "prmStgAccountName": "[concat(parameters('prmStorageName'),uniqueString(resourceGroup().Id))]"
  },
  "resources": [
    {
      "name": "[variables('stdStgAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-05-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "Storage Account - Simple"
      },
      "properties": {
        "accountType": "[parameters('stdStorageType')]"
      }
    },
    {
      "name": "[variables('prmStgAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-05-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "Storage Account - Premium"
      },
      "properties": {
        "accountType": "[parameters('prmStorageType')]"
      }
    }
  ]
}
